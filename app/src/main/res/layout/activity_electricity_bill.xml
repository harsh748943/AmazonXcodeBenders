<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFF9E2"
    android:orientation="vertical"
    android:id="@+id/activity_electricity_billl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/topBar"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="#FBDF4D"
        android:layout_gravity="top">

        <ImageView
            android:id="@+id/ivBack"
            android:src="@drawable/ic_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Back" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivAmazonLogo"
                android:src="@drawable/ic_amazon_logo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="fitCenter"
                android:contentDescription="Amazon Logo" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivClose"
            android:src="@drawable/ic_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Close" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/billTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electricity"
                android:textStyle="bold"
                android:textColor="#222"
                android:textSize="22sp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" />

            <!-- Consumer Info Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/billerLogo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_elect"
                    android:contentDescription="Biller" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/customerId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N3306002358"
                        android:textColor="#222"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/billerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MP Paschim Kshetra Vidyut Vitran"
                        android:textColor="#666"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/editBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:textColor="#0097A7"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!-- Bill Details Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff"
                android:elevation="2dp"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:radius="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bill details"
                    android:textStyle="bold"
                    android:textColor="#222"
                    android:textSize="17sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/customerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer name: Harsh"
                    android:textColor="#222"
                    android:textSize="15sp"
                    android:paddingBottom="2dp" />

                <TextView
                    android:id="@+id/billDueDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bill due date: 05-06-2025"
                    android:textColor="#222"
                    android:textSize="15sp"
                    android:paddingBottom="2dp" />

                <TextView
                    android:id="@+id/payableAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payable amount: ₹1849.00"
                    android:textColor="#222"
                    android:textSize="15sp"
                    android:paddingBottom="2dp" />

                <TextView
                    android:id="@+id/seeMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See more"
                    android:textColor="#0097A7"
                    android:textSize="15sp"
                    android:paddingTop="6dp"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!-- Payable Amount Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payable amount"
                android:textColor="#222"
                android:textSize="15sp"
                android:paddingTop="8dp"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/editPayableAmount"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rounded_bg"
                android:hint="₹ 1849.00"
                android:textSize="20sp"
                android:textColor="#222"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:gravity="center_vertical" />

            <!-- Enable auto renew -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#f5f5f5"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/autoRenewCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enable auto renew"
                        android:textColor="#222"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Never miss a bill. We'll remember and automatically pay your future bills on time."
                        android:textColor="#666"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View details"
                        android:textColor="#0097A7"
                        android:textSize="14sp"
                        android:paddingTop="2dp"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>
            </LinearLayout>

            <!-- Pay Now Button -->
            <Button
                android:id="@+id/payNowBtn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Pay now"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp"
                android:background="@drawable/rounded_yellow_btn"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="8dp" />

            <!-- Info Note -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The payment will reflect at biller's end after 2-3 working days."
                android:textColor="#444"
                android:textSize="13sp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

            <!-- Bharat Connect Logo -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_bharat"
                android:layout_gravity="center_horizontal"
                android:contentDescription="Bharat Connect" />

            <!-- Offers/Bottom Navigation Placeholder -->
            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="#FFF9E2" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
