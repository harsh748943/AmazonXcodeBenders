<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    tools:context=".BudgetPlanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Monthly Budget Plan"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/material_deep_purple_700"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" />

        <!-- Summary Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/material_grey_300"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overall Summary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/material_grey_800"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvBudgetSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading summary..."
                    android:textSize="16sp"
                    android:textColor="@color/material_grey_900"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Category Breakdown Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/material_grey_300"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recommended Budget per Category"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/material_grey_800"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:id="@+id/llCategoryBudgetList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Insights and Notes Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/material_grey_300"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Insights and Notes"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/material_grey_800"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:id="@+id/llNotesList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>
