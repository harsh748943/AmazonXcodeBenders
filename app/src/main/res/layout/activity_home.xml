<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_home"
    android:background="@drawable/amazon_pay_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <!-- Fixed Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="@android:color/transparent"
        android:layout_gravity="top">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/ivBack"
            android:src="@drawable/ic_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Back" />

        <!-- Centered Amazon Pay Logo -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivAmazonLogo"
                android:src="@drawable/ic_amazon_logo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="fitCenter"
                android:contentDescription="Amazon Logo" />
        </LinearLayout>

        <!-- Close Button -->
        <ImageView
            android:id="@+id/ivClose"
            android:src="@drawable/ic_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Close" />
    </LinearLayout>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:background="@drawable/amazon_pay_gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp">>

        <LinearLayout

            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp">

                <!-- Search Bar -->
                <LinearLayout
                    android:layout_width="400dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/search_bar_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Search"
                        android:src="@drawable/ic_search" />

                    <EditText
                        android:layout_width="273dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:ellipsize="end"
                        android:hint="Search for billers or contacts"
                        android:maxLines="1" />
                </LinearLayout>

                <!-- QR Code Icon in Rounded Background -->
                <FrameLayout
                    android:layout_marginStart="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/qr_rounded_bg"
                    android:gravity="center">

                    <ImageView
                        android:src="@drawable/ic_qr_code"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="QR Code" />
                </FrameLayout>
            </LinearLayout>


            <!-- Top Actions -->
            <LinearLayout
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_upi"
                        android:layout_width="128dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="UPI" />
                    <TextView
                        android:text="UPI"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="Get Rewards"
                        android:textSize="12sp"
                        android:textColor="#888"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_card"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="Cards" />
                    <TextView
                        android:text="Cards"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="Add/Manage"
                        android:textSize="12sp"
                        android:textColor="#888"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_wallet"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:contentDescription="Balance" />
                    <TextView
                        android:text="Balance"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/walletBalance"
                        android:text="₹2,312.00"
                        android:textSize="12sp"
                        android:textColor="#888"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_pay_later"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:contentDescription="Pay Later" />
                    <TextView
                        android:text="Pay Later"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="Get started"
                        android:textSize="12sp"
                        android:textColor="#888"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <!-- Rewards Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:elevation="2dp"

                android:radius="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Rewards"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹0"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cashback Earned"
                                android:textColor="#888"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Offers Collected"
                                android:textColor="#888"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Scratch cards"
                                android:textColor="#888"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Money Transfer Section -->

        <TextView
            android:layout_marginTop="20dp"
            android:text="Money Transfer"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <GridLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false">


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Money Transfer Section -->
            <TextView
                android:layout_marginTop="20dp"
                android:text="Money Transfer"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <GridLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:rowOrderPreserved="false">

                <!-- Each item: icon + label -->
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginTop="10dp"
                    android:layout_margin="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">

                    <ImageView
                        android:src="@drawable/ic_scan_qr"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="25dp"
                        android:contentDescription="Scan any QR" />
                    <TextView
                        android:text="Scan any QR"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_margin="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">

                    <ImageView
                        android:id="@+id/sendMoneyImage"
                        android:src="@drawable/ic_send_money"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:contentDescription="Send Money" />
                    <TextView
                        android:id="@+id/sendMoneyText"
                        android:text="Send Money"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_margin="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">

                    <ImageView
                        android:src="@drawable/ic_self_transfer"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="28dp"
                        android:contentDescription="Self Transfer" />
                    <TextView
                        android:text="Self Transfer"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:layout_margin="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">

                    <ImageView
                        android:src="@drawable/ic_add_wallet"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="25dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="Add to wallet" />
                    <TextView
                        android:text="Add to wallet"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- Second row -->
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_margin="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">

                    <ImageView
                        android:src="@drawable/ic_bank_transfer"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="Bank Transfer" />
                    <TextView
                        android:text="Bank Transfer"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_margin="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">

                    <ImageView
                        android:src="@drawable/ic_show_qr"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="Show QR" />
                    <TextView
                        android:text="Show QR"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_budget"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_row="1"
                android:layout_column="3"
                android:layout_margin="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1">

                <ImageView
                    android:src="@drawable/ic_budgeting"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="Monthly Budget" />
                <TextView
                    android:text="Monthly Budget"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"

                <LinearLayout
                    android:orientation="vertical"

                    android:gravity="center"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_margin="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">

                    <ImageView
                        android:src="@drawable/ic_receive_money"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="Receive Money" />
                    <TextView
                        android:text="Receive Money"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_row="1"
                    android:layout_column="3"
                    android:layout_margin="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">

                    <ImageView
                        android:src="@drawable/ic_refer_friend"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="Refer a Friend" />
                    <TextView
                        android:text="Refer a Friend"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </GridLayout>

            <!-- Earn Rewards Section -->
            <TextView
                android:layout_marginTop="20dp"
                android:text="Earn Rewards Every Time You Pay"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_mobile_recharge"
                        android:layout_width="128dp"
                        android:padding="15dp"
                        android:layout_height="128dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="Mobile Recharge" />
                    <TextView
                        android:text="Mobile Recharge"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_marginTop="2dp"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_pay_bills"
                        android:layout_width="128dp"
                        android:layout_height="128dp"
                        android:scaleType="centerCrop"
                        android:padding="15dp"

                        android:contentDescription="Pay Bills" />
                    <TextView
                        android:text="Pay Bills"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:padding="18dp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_travel"
                        android:layout_width="128dp"
                        android:layout_height="128dp"
                        android:padding="15dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="Travel" />
                    <TextView
                        android:text="Travel"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:padding="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_gift_cards"
                        android:layout_width="128dp"
                        android:layout_height="128dp"
                        android:scaleType="centerCrop"
                        android:padding="15dp"
                        android:contentDescription="Gift Cards" />
                    <TextView
                        android:text="Gift Cards"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:padding="18dp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <!-- Bottom Navigation (optional, usually in activity) -->
            <!-- You can use BottomNavigationView for this section -->
        </LinearLayout>
    </ScrollView>
    <!-- Offline Overlay Bar -->
    <TextView
        android:id="@+id/offlineBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#223344"
        android:text="Offline - Showing limited content"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:padding="8dp"
        android:visibility="gone"/>
</FrameLayout>