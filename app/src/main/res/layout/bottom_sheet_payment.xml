<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- User Info Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- User Initials Circle -->
        <TextView
            android:id="@+id/bsUserInitials"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_bg"
            android:text="AJ"
            android:textColor="#fff"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/bsUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aryan Jaiswal"
                android:textStyle="bold"
                android:textColor="#222"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/bsUserUpi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aryanraj81380@okaxis"
                android:textColor="#888"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/bsAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹1"
            android:textColor="#222"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Banking Name Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_verified"
            android:contentDescription="Verified" />

        <TextView
            android:id="@+id/bsBankingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ARYAN RAJ"
            android:textColor="#222"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginStart="6dp" />
    </LinearLayout>

    <!-- Pay With Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pay with"
        android:textColor="#444"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="2dp"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amazon Pay UPI"
            android:textStyle="bold"
            android:textColor="#222"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="State Bank of India **5409"
            android:textColor="#444"
            android:textSize="14sp"
            android:layout_marginStart="12dp" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_state_bank"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:contentDescription="UPI" />
    </LinearLayout>

    <!-- Show more ways to pay -->
    <TextView
        android:id="@+id/bsShowMoreWays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show more ways to pay"
        android:textColor="#0097A7"
        android:textSize="15sp"
        android:paddingTop="8dp"
        android:paddingBottom="12dp"
        android:clickable="true"
        android:focusable="true" />

    <!-- Pay Button -->
    <Button
        android:id="@+id/bsPayBtn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Pay ₹1"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="17sp"
        android:backgroundTint="#FFD600"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_yellow_btn"/>
</LinearLayout>
