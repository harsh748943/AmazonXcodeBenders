<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="@drawable/amazon_pay_gradient"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/topBar"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="@android:color/transparent"
        android:layout_gravity="top">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/ivBack"
            android:src="@drawable/ic_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Back" />

        <!-- Centered Amazon Pay Logo -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivAmazonLogo"
                android:src="@drawable/ic_amazon_logo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="fitCenter"
                android:contentDescription="Amazon Logo" />
        </LinearLayout>

        <!-- Close Button -->
        <ImageView
            android:id="@+id/ivClose"
            android:src="@drawable/ic_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Close" />
    </LinearLayout>

    <!-- Wallet Balance Section -->
    <LinearLayout
        android:id="@+id/walletBalanceSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="64dp"
      android:paddingBottom="16dp">

        <ImageView
            android:src="@drawable/ic_wallet"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Wallet" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:text="Wallet Balance"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvWalletBalance"
                android:text="₹0.00"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2D6AFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <!-- Card Container for Premium Look -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/premium_card_bg"
        android:elevation="8dp"
        android:padding="24dp"
        android:layout_margin="24dp"
        android:gravity="center_horizontal">

        <!-- Offline Icon & Title -->
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_offline_payment"
            android:contentDescription="Offline Payment"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/circle_bg"
            android:padding="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offline Payment"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#222"
            android:layout_marginTop="16dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send money securely via SMS"
            android:textSize="14sp"
            android:textColor="#888"
            android:layout_marginTop="4dp"
            android:gravity="center"/>

        <!-- Divider -->
        <View
            android:layout_width="48dp"
            android:layout_height="2dp"
            android:background="#E0E0E0"
            android:layout_marginTop="18dp"
            android:layout_gravity="center"/>

        <!-- Recipient Phone Number -->
        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Recipient Mobile Number"
            android:inputType="phone"
            android:background="@drawable/edittext_bg"
            android:layout_marginTop="24dp"
            android:drawableLeft="@drawable/ic_phone"
            android:paddingLeft="16dp"
            android:textSize="16sp"/>

        <!-- Amount -->
        <EditText
            android:id="@+id/etAmount"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter Amount (₹)"
            android:inputType="numberDecimal"
            android:background="@drawable/edittext_bg"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/ic_rupee"
            android:paddingLeft="16dp"
            android:textSize="16sp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSendSMS"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/send_sms_bg"
            app:backgroundTint="@null"
            android:text="Send Money via SMS"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="#222"
            android:layout_marginTop="28dp"
            android:fontFamily="sans-serif-medium"
            android:elevation="2dp"/>


        <!-- Feedback Text -->
        <TextView
            android:id="@+id/tvFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#2D6AFF"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- Overlay Bar for Offline Status (Fixed at Bottom) -->
    <TextView
        android:id="@+id/offlineBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#FFB300"
        android:text="Offline - Sending via SMS"
        android:textColor="#222"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:padding="12dp"
        android:elevation="8dp"
        android:visibility="visible"/>
</FrameLayout>
